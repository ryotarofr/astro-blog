---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Body from "../components/Body.astro";
import Content from "../components/Content.astro";
import Sidebar from "../components/Sidebar.astro";
import "../styles/markdown.css";

export interface Props {
  content: {
    title: string;
    description: string;
    createdAt?: string;
    updatedAt?: string;
    heroImage?: string;
    tags: string[];
  };
}

const {
  content: { title, description, heroImage },
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={heroImage} />
  </head>

  <Body>
    <Header />
    <Sidebar />
    <main class="pt-[56px] lg:pl-60">
      <Content className="pt-6">
        <div class="mb-8">
          {
            heroImage && (
              <img
                class="border border-slate-300 dark:border-zinc-700 rounded-xl mx-auto"
                width={540}
                height={270}
                src={heroImage}
                alt=""
              />
            )
          }
        </div>
        <h1 class="text-3xl my-1 font-mplus">{title}</h1>
        <div>{description}</div>
        <hr class="border-top border-zinc-400 my-4" />
        <div class="markdown" itemprop="text">
          <slot />
        </div>
        <span
          class="underline underline-offset-2 hover:text-orange-500 decoration-orange-500 text-2xl"
        ></span>
      </Content>
    </main>
    <Footer />
  </Body>
</html>
